<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <display-name>Student Score Enrolling System</display-name>
  <description>
     Student Score Enrolling System (ISA Assignment)
  </description>


  <!-- Servlet Configurations -->

  <servlet>
    <servlet-name>Init</servlet-name>
    <servlet-class>ac.adproj.scms.servlet.InitServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>


  <servlet>
    <servlet-name>ScoreInfoProc</servlet-name>
    <servlet-class>ac.adproj.scms.servlet.ScoreInfoServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ScoreInfoProc</servlet-name>
    <url-pattern>/scoreM/infoProc</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>SubInfoProcServlet</servlet-name>
    <servlet-class>ac.adproj.scms.servlet.SubInfoProcServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SubInfoProcServlet</servlet-name>
    <url-pattern>/subM/infoProc</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>StuInfoProcServlet</servlet-name>
    <servlet-class>ac.adproj.scms.servlet.StuInfoProcServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>StuInfoProcServlet</servlet-name>
    <url-pattern>/stuM/infoProc</url-pattern>
  </servlet-mapping>
  

  <servlet>
    <servlet-name>PhotoServlet</servlet-name>
    <servlet-class>ac.adproj.scms.servlet.StudentPhotoServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PhotoServlet</servlet-name>
    <url-pattern>/stuPhoto.png</url-pattern>
  </servlet-mapping>


  <!-- Context (Application) Configurations -->

  <context-param>
    <param-name>driver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>

  <context-param>
    <param-name>serverAddr</param-name>
    <param-value>192.168.1.110</param-value>
  </context-param>

  <context-param>
    <param-name>serverTimeZone</param-name>
    <param-value>Asia/Shanghai</param-value>
  </context-param>

  <context-param>
    <param-name>db</param-name>
    <param-value>xscj</param-value>
  </context-param>

  <context-param>
    <param-name>userName</param-name>
    <param-value>remoteA</param-value>
  </context-param>

  <context-param>
    <param-name>password</param-name>
    <param-value>1</param-value>
  </context-param>
</web-app>